{
    "name": "github-web-widget",
    "version": "3.0.0-beta.0",
    "description": "Web Components library for GitHub based on WebCell",
    "keywords": [
        "github",
        "web",
        "component",
        "web-cell",
        "widget"
    ],
    "author": "shiy2008@gmail.com",
    "license": "AGPL-3.0",
    "homepage": "https://tech-query.me/GitHub-Web-Widget/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TechQuery/GitHub-Web-Widget.git"
    },
    "bugs": {
        "url": "https://github.com/TechQuery/GitHub-Web-Widget/issues"
    },
    "source": "source/index.ts",
    "types": "dist/index.d.ts",
    "scripts": {
        "start": "rm -rf docs/demo/  &&  cd test/  &&  parcel index.html -d ../docs/demo/",
        "pack-demo": "rm -rf docs/demo/  &&  cd test/  &&  parcel build index.html --public-url . -d ../docs/demo/",
        "test": "lint-staged",
        "pack-css": "parcel build source/index.ts",
        "pack-docs": "rm -rf docs/  &&  typedoc --name \"GitHub Web Widget\" --out docs/ source/",
        "build": "rm -rf dist/  &&  npm run pack-css  &&  tsc  &&  rm -rf dist/*.{js,map}  &&  npm run pack-docs",
        "help": "npm run pack-docs  &&  open-cli docs/index.html",
        "prepublishOnly": "npm test  &&  npm run build"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    },
    "peerDependencies": {
        "bootstrap": "^4.4.1",
        "github-markdown-css": "^3.0.1",
        "highlight.js": "^9.16.2",
        "koajax": "^0.5.0",
        "marked": "^0.7.0",
        "web-cell": "^2.0.0-rc.8"
    },
    "devDependencies": {
        "@babel/core": "^7.7.5",
        "@types/highlight.js": "^9.12.3",
        "@types/marked": "^0.7.2",
        "@typescript-eslint/parser": "^2.10.0",
        "@webcomponents/webcomponentsjs": "^2.4.0",
        "autoprefixer": "^9.7.3",
        "bootstrap": "^4.4.1",
        "eslint": "^6.7.2",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-prettier": "^3.1.1",
        "github-markdown-css": "^3.0.1",
        "highlight.js": "^9.16.2",
        "husky": "^3.1.0",
        "iterable-observer": "^1.0.0-beta.2",
        "koajax": "^0.5.1",
        "less": "^3.10.3",
        "lint-staged": "^9.5.0",
        "marked": "^0.7.0",
        "open-cli": "^5.0.0",
        "parcel-bundler": "^1.12.4",
        "postcss-modules": "^1.4.1",
        "prettier": "^1.19.1",
        "snabbdom": "^0.7.3",
        "typedoc": "^0.15.4",
        "typescript": "^3.7.3",
        "web-cell": "^2.0.0-rc.8"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true
    },
    "lint-staged": {
        "*.{html,md,less,json,ts,tsx}": [
            "prettier --write",
            "git add"
        ],
        "*.{ts,tsx}": [
            "prettier --write",
            "eslint --fix",
            "git add"
        ]
    },
    "postcss": {
        "modules": true,
        "plugins": {
            "autoprefixer": {
                "grid": true
            }
        }
    }
}
