{
    "name": "github-web-widget",
    "version": "3.0.0-alpha.0",
    "description": "Web Component set for GitHub based on WebCell",
    "keywords": [
        "github",
        "web",
        "component",
        "web-cell",
        "widget"
    ],
    "author": "shiy2008@gmail.com",
    "license": "AGPL-3.0",
    "homepage": "https://tech-query.me/GitHub-Web-Widget/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TechQuery/GitHub-Web-Widget.git"
    },
    "bugs": {
        "url": "https://github.com/TechQuery/GitHub-Web-Widget/issues"
    },
    "module": "dist/index.js",
    "scripts": {
        "start": "parcel test/main.html",
        "lint": "eslint . --ignore-pattern dist/ --fix",
        "build": "npm run format  &&  npm run lint  &&  web-cell pack",
        "test": "lint-staged",
        "prepublishOnly": "npm test"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test"
        }
    },
    "dependencies": {
        "dom-renderer": "^1.0.3",
        "highlight.js": "^9.16.2",
        "marked": "^0.6.3",
        "web-cell": "^2.0.0-rc.2"
    },
    "devDependencies": {
        "@webcomponents/webcomponentsjs": "^2.4.0",
        "babel-eslint": "^10.0.3",
        "bootstrap": "4.2.1",
        "eslint": "^5.16.0",
        "github-markdown-css": "^3.0.1",
        "husky": "^3.1.0",
        "koapache": "^1.0.6",
        "lint-staged": "^9.4.3",
        "parcel-bundler": "^1.12.4",
        "prettier": "^1.19.1",
        "typescript": "^3.7.2"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true
    },
    "lint-staged": {
        "*.{html,md,json,ts,tsx}": [
            "prettier --write",
            "git add"
        ]
    }
}
