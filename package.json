{
    "name": "github-web-widget",
    "version": "2.4.0",
    "description": "Web Component set for GitHub based on WebCell",
    "keywords": [
        "github",
        "web",
        "component",
        "web-cell",
        "widget"
    ],
    "author": "shiy2008@gmail.com",
    "license": "AGPL-3.0",
    "homepage": "https://tech-query.me/GitHub-Web-Widget/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TechQuery/GitHub-Web-Widget.git"
    },
    "bugs": {
        "url": "https://github.com/TechQuery/GitHub-Web-Widget/issues"
    },
    "module": "dist/index.js",
    "directories": {
        "lib": "source/",
        "test": "test/"
    },
    "engines": {
        "node": "^6.3.0"
    },
    "scripts": {
        "dev": "web-cell preview",
        "format": "prettier --write \"{,!(node_modules|.git|dist|docs)/**/}*.{html,md,css,less,js,json}\"",
        "lint": "eslint . --ignore-pattern dist/ --fix",
        "build": "npm run format  &&  npm run lint  &&  web-cell pack",
        "test": "npm run build",
        "prepublishOnly": "npm test"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test  &&  git add ."
        }
    },
    "dependencies": {
        "dom-renderer": "^0.9.0",
        "highlight.js": "^9.15.6",
        "marked": "^0.6.2",
        "web-cell": "^1.1.0"
    },
    "peerDependencies": {
        "@babel/polyfill": "^7.4.4",
        "@webcomponents/webcomponentsjs": "^2.2.10"
    },
    "devDependencies": {
        "@babel/plugin-proposal-decorators": "^7.4.4",
        "@babel/polyfill": "^7.4.4",
        "@webcomponents/webcomponentsjs": "^2.2.10",
        "babel-eslint": "^10.0.1",
        "bootstrap": "4.2.1",
        "eslint": "^5.16.0",
        "github-markdown-css": "^3.0.1",
        "husky": "^2.3.0",
        "koapache": "^1.0.6",
        "prettier": "^1.17.1",
        "web-cell-cli": "^1.0.0-beta"
    },
    "babel": {
        "plugins": [
            [
                "@babel/plugin-proposal-decorators",
                {
                    "decoratorsBeforeExport": true
                }
            ]
        ]
    },
    "amd-bundle": {
        "moduleMap": {
            "highlight.js": "hljs"
        }
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true
    }
}
