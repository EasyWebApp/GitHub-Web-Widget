{
    "name": "github-web-widget",
    "version": "3.0.0-beta.5",
    "description": "Web Components library for GitHub based on WebCell",
    "keywords": [
        "github",
        "web",
        "component",
        "web-cell",
        "widget"
    ],
    "author": "shiy2008@gmail.com",
    "license": "AGPL-3.0",
    "homepage": "https://tech-query.me/GitHub-Web-Widget/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TechQuery/GitHub-Web-Widget.git"
    },
    "bugs": {
        "url": "https://github.com/TechQuery/GitHub-Web-Widget/issues"
    },
    "source": "source/index.ts",
    "main": "source/index.ts",
    "module": "source/index.ts",
    "types": "dist/index.d.ts",
    "scripts": {
        "start": "rm -rf docs/demo/  &&  cd test/  &&  parcel index.html -d ../docs/demo/",
        "pack-demo": "rm -rf docs/demo/  &&  cd test/  &&  parcel build index.html --public-url . -d ../docs/demo/",
        "test": "lint-staged",
        "pack-css": "parcel build source/index.ts",
        "pack-docs": "rm -rf docs/  &&  typedoc --name \"GitHub Web Widget\" --out docs/ source/",
        "build": "rm -rf dist/  &&  npm run pack-css  &&  tsc  &&  rm -rf dist/*.{js,map}",
        "help": "npm run pack-docs  &&  open-cli docs/index.html",
        "prepublishOnly": "npm test  &&  npm run build"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    },
    "peerDependencies": {
        "bootstrap": "^4.5.0",
        "github-markdown-css": "^4.0.0",
        "koajax": "^0.6.2",
        "marked": "^1.1.0",
        "prismjs": "^1.20.0",
        "web-cell": "^2.0.1"
    },
    "devDependencies": {
        "@babel/core": "^7.10.2",
        "@types/core-js": "^2.5.3",
        "@types/marked": "^0.7.4",
        "@types/prismjs": "^1.16.1",
        "@typescript-eslint/parser": "^3.2.0",
        "autoprefixer": "^9.8.0",
        "core-js": "^3.6.5",
        "eslint": "^7.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.3",
        "husky": "^4.2.5",
        "iterable-observer": "^1.0.0-beta.4",
        "koajax": "^0.6.2",
        "less": "^3.11.3",
        "lint-staged": "^10.2.9",
        "marked": "^1.1.0",
        "open-cli": "^6.0.1",
        "parcel-bundler": "^1.12.4",
        "postcss-modules": "^2.0.0",
        "prettier": "^2.0.5",
        "prismjs": "^1.20.0",
        "snabbdom": "^0.7.4",
        "typedoc": "^0.17.7",
        "typescript": "^3.9.5",
        "web-cell": "^2.0.1",
        "web-utility": "^1.5.2"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "singleQuote": true
    },
    "lint-staged": {
        "*.{html,md,less,json,ts,tsx}": [
            "prettier --write"
        ],
        "*.{ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ]
    }
}
